<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/card_background"
    app:strokeColor="@color/card_stroke"
    app:strokeWidth="0.5dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Date -->
            <TextView
                android:id="@+id/dateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/secondary_text"
                android:textSize="12sp"
                android:typeface="monospace"
                tools:text="Aug 7, 2023"/>

            <!-- Mood Emoji -->
            <TextView
                android:id="@+id/moodEmoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="ðŸ˜Š"/>

            <!-- Delete Button -->
            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                android:contentDescription="Delete entry"
                app:tint="@color/mood_angry" />
        </LinearLayout>

        <!-- Preview Text -->
        <TextView
            android:id="@+id/previewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:fontFamily="sans-serif-condensed-light"
            android:lineSpacingExtra="4dp"
            tools:text="Today was a wonderful day filled with productivity and joy. I completed all my tasks..."/>

        <!-- Tags -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/tagContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:chipSpacing="4dp"
            app:singleLine="true"
            app:singleSelection="true"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="12dp"
            android:background="@color/divider_color"/>

        <!-- View Button -->
        <TextView
            android:id="@+id/viewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="View â†’"
            android:textColor="@color/accent_color"
            android:textSize="14sp"
            android:fontFamily="sans-serif-condensed"
            android:drawablePadding="4dp"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>