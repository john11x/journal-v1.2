<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".JournalListActivity">

    <!-- Background Animation - Changed to use raw resource -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.03"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/watercolor_bg"/>

    <!-- App Bar with Search -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:titleTextColor="@color/primary_text"
            app:navigationIcon="@drawable/ic_back_arrow"
            app:title="Reflections"/>


        <!-- Stats Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <!-- Streak Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="88dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="12dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/streakCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/accent_color"
                        android:textSize="24sp"
                        android:fontFamily="monospace"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="day streak"
                        android:textColor="@color/secondary_text"
                        android:textSize="12sp"
                        android:fontFamily="monospace"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Spacer -->
            <View
                android:layout_width="16dp"
                android:layout_height="1dp"/>

            <!-- Entries Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="88dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="12dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/entriesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/accent_color"
                        android:textSize="24sp"
                        android:fontFamily="monospace"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="entries"
                        android:textColor="@color/secondary_text"
                        android:textSize="12sp"
                        android:fontFamily="monospace"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Journal Entries List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/journalRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="88dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <!-- Apple-style FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addEntryFab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="24dp"
        android:contentDescription="Add new entry"
        app:backgroundTint="@color/accent_color"
        app:layout_anchor="@id/journalRecyclerView"
        app:layout_anchorGravity="bottom|end"
        app:maxImageSize="24dp"
        app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.LargeComponent"
        app:srcCompat="@drawable/ic_add"
        app:tint="@android:color/white"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>